{
    "manifest_version": 3,
    "name": "ChatGPT Prompt History Sidebar",
    "version": "1.0",
    "description": "Displays all user prompts from a ChatGPT conversation.",
    "permissions": ["activeTab", "scripting"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://chatgpt.com/*"],
        "js": ["content.js"],
        "css": ["sidebar.css"],
        "run_at": "document_idle"
      }
    ]
  }